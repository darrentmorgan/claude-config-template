{
  "permissions": {
    "allow": [
      "Bash(git add:*)",
      "Bash(git commit:*)",
      "Bash(git push:*)",
      "Bash(pnpm :*::*)",
      "Bash(curl:*)",
      "Bash(chmod:*)",
      "Task(*:*)"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PostToolUse": [
      {
        "matcher": "Edit",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/tool-use.sh \"$FILE_PATH\"",
            "timeout": 30
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": ".claude/hooks/tool-use.sh \"$FILE_PATH\"",
            "timeout": 30
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "echo 'ðŸ¤– Claude Code session active' >> .claude/.session.log",
            "timeout": 5
          }
        ]
      }
    ]
  }
}